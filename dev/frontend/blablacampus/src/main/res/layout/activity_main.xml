        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/relativelayout_bottom_menu">

                    <TextView
                        android:id="@+id/home_blabla_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_sub_name1"
                        android:layout_centerInParent="true"
                        style="@style/homeText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/app_sub_name2"
                        android:layout_below="@+id/home_blabla_text"
                        style="@style/homeText"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_bottom_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backgroundmenupurple"
                    android:paddingBottom="@dimen/margin_10"
                    android:layout_alignParentBottom="true">


                    <LinearLayout
                        android:id="@+id/image_conatct_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        style="@style/imageMargin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/contacts_mdpi"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contacts"
                            android:layout_gravity="center"
                            style="@style/imageText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/image_conatct_icon"
                        style="@style/imageMargin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/notifications_mdpi"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:layout_gravity="center"
                            style="@style/imageText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/image_personal_infos_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_25"
                        style="@style/imageMargin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/userinfos_mdpi"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mes Infos"
                            android:layout_gravity="center"
                            style="@style/imageText"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@id/image_personal_infos_icon"
                        style="@style/imageMargin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/accueil_ldpi"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acceuil"
                            android:layout_gravity="center"
                            style="@style/imageText"/>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/menu_trajet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trajets_mdpi"
                android:background="@drawable/bordersmbtnrounded"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="@dimen/margin_25"
                android:onClick="showPathGraphicInterface"/>

        </FrameLayout>

</android.support.constraint.ConstraintLayout>
