<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_10"
    android:paddingTop="@dimen/margin_10"
    android:paddingRight="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_30"
    tools:context="com.example.cedriclingom.blablacampus.RegistrationPage2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_purple_radius_5"
        android:paddingVertical="@dimen/margin_10"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="2"
            android:padding="@dimen/margin_15">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/title_registration"
                android:layout_gravity="center_vertical"
                style="@style/connexionText"/>

            <ImageView
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/cancel_mdpi"
                android:layout_gravity="right"/>

        </GridLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/school_mdpi"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/margin_15"
            android:paddingHorizontal="@dimen/size_45"
            android:orientation="vertical">

            <EditText
                android:layout_width="@dimen/margin_270"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:inputType="text|textAutoComplete"
                android:hint="Ecole"
                style="@style/connexionInput"/>

            <EditText
                android:layout_width="@dimen/margin_270"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:inputType="number"
                android:hint="NumÃ©ro de voie"
                style="@style/connexionInput"/>

            <EditText
                android:layout_width="@dimen/margin_270"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:inputType="textPostalAddress"
                android:hint="Rue"
                style="@style/connexionInput"/>

            <EditText
                android:layout_width="@dimen/margin_270"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:inputType="number"
                android:hint="Code Postal"
                style="@style/connexionInput"/>
            <EditText
                android:layout_width="@dimen/margin_270"
                android:layout_height="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_10"
                android:inputType="textAutoComplete"
                android:hint="Ville"
                style="@style/connexionInput"/>

            <Button
                android:layout_width="@dimen/margin_250"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25"
                android:text="Confirmer l'inscription"
                android:layout_gravity="center"
                style="@style/confrimRegistrationButton"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      "
                android:textSize="@dimen/size_8"
                android:background="@drawable/bg_white_border_circle_xs__purple"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:text="      "
                android:textSize="@dimen/size_8"
                android:background="@drawable/bg_purple_border_circle_xs_purple"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
