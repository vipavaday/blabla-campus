<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blablaCampusWhite">

        <ImageView
            android:id="@+id/signup_school_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/school_logo"
            android:contentDescription="@string/school_desc"/>

        <RelativeLayout android:id="@+id/signup__school_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_school_logo"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputLayout android:id="@+id/signup_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:hint="@string/school_name_hint"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/blablaCampuspurple"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                style="@style/outlinedInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_school_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:textColor="@color/blablaCampuspurple" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:id="@+id/signup_school_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup_school_name"
                android:layout_marginTop="10dp"
                android:hint="@string/school_address_hint"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/blablaCampuspurple"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                style="@style/outlinedInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_school_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/blablaCampuspurple" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout android:id="@+id/signup_school_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signup_school_address"
                android:layout_marginTop="10dp"
                android:hint="@string/school_city_hint"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/blablaCampuspurple"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                style="@style/outlinedInput">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/signup_school_city_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPostalAddress|textAutoComplete"
                    android:textColor="@color/blablaCampuspurple" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup__school_inputs"
            android:padding="0dp">

            <Button
                style="@style/outlinedButton"
                android:layout_width="@dimen/margin_205"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="showSchoolPage"
                android:text="@string/signup_btn" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>