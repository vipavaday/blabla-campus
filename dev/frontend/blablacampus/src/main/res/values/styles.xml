<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">-->
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--Tabs styles-->

    <style name="homeText">
        <item name="android:textSize">75dp</item>
        <item name="android:textColor">@color/blablaCampusPurpleClear</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/continuo</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AuthBlaBlaCampusText">
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/continuo</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="connexionText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="outlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="strokeColor">@drawable/btn_outlined_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="outlinedInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorOnSurface</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TimePickerTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/blablaCampuspurple</item>
        <item name="android:colorAccent">@color/blablaCampuspurple</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
