<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="homeText">
        <item name="android:textSize">75dp</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/continuo</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="AuthBlaBlaCampusText">
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/continuo</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="imageText">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="connexionText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="imageMargin">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


    <!--Les inputs-->
    <style name="connexionInput">
        <item name="android:paddingLeft">@dimen/margin_15</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:background">@drawable/border_input_connexion</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <!--Les boutons-->
    <style name="seconnecterButton">
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:paddingLeft">@dimen/margin_30</item>
        <item name="android:paddingRight">@dimen/margin_30</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/margin_15</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blablaCampuspurple</item>
        <item name="android:background">@drawable/border_purple_raduis_30</item>
    </style>

    <style name="registerButton">
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/margin_15</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_blue_border_purple</item>
    </style>

</resources>
